<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRentalApp.PresentationLayer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <link href="~/css/defaultlayout.css" rel="stylesheet" />

     <script src="~/lib/jquery/dist/jquery.min.js"></script>
     <script src="~/lib/jquery/dist/jquery.js"></script>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bungee+Spice&family=Tektur:wght@400..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    
    
    <script src="~/js/defualtlayout.js"></script>

</head>
<body>
     <nav class="navbar navbar-expand-md navbar-light" style="background-color: #ffffff;">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="~/static/nav_brand.png" alt="" style="height: 45px; width: 100px;">
            </a>
            <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target=".navbardrop" aria-controls="navbar" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                <span></span>
                <span></span>
            </button>
            
            <div class="collapse navbar-collapse navbardrop">
                <ul class="navbar-nav me-auto py-2">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="About" asp-controller="Home">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Index" asp-controller="Contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="SearchCar" asp-controller="Customer">Rent</a>
                    </li>
                    
                </ul>
            </div>

            <div class="navbar-collapse collapse w-100 order-3 navbardrop">
                <ul class="navbar-nav ms-auto py-2">
                    @if(!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item mx-2">
                            <a class="nav-link action-btn action-btn-login" asp-action="Login" asp-controller="Customer">Login</a>
                        </li>

                        <li class="nav-item mx-2">
                            <a class="nav-link action-btn action-btn-register" asp-action="Register" asp-controller="Customer">Register</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item mx-2">
                            <a class="nav-link action-btn action-btn-register" asp-action="Logout" asp-controller="Customer">Logout</a>
                        </li>
                    }
                    
                </ul>
            </div>
        </div>
    </nav>


    
     @RenderBody()
       
    

    <!-- footer -->
    <footer class="mt-4 mb-0">
            <div class="container p-4">

                <div class="row">

                    <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                        <h5 class="text-uppercase">RentNGo</h5>

                        <p>
                            RentNGO is your go-to destination for hassle-free and convenient car rentals. Discover a world of possibilities with our diverse fleet and experience the freedom of the open road like never before. Wherever you go, RentNGo is your trusted companion for seamless travel."
                        </p>
                    </div>

                    <div class="col-lg-3 col-sm-6 mb-4 mb-md-0">
                        <h5 class="text-uppercase">Useful Links</h5>

                        <ul class="list-unstyled mb-0">
                            <li>
                                <a asp-action="About" asp-controller="Home" class="text-body">
                                    <i class="fa-solid fa-circle-info"></i>
                                    About
                                </a>
                            </li>
                            <li>
                                <a asp-action="About" asp-controller="Home" class="text-body">
                                    <i class="fa-solid fa-envelope"></i>
                                    Contact
                                </a>
                            </li>
                            <li>
                                <a asp-action="TNC" asp-controller="Home" class="text-body">
                                    <i class="fa-solid fa-file-invoice"></i>
                                    Terms of Use
                                </a>
                            </li>
                            <li>
                                <a asp-action="Privacy" asp-controller="Home" class="text-body">
                                    <i class="fa-solid fa-user-lock"></i>
                                    Privacy Policy
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="col-lg-3 col-sm-6 mb-4 mb-md-0">

                        <h5 class="text-uppercase mb-1">

                            Address
                        </h5>
                        <h6 class="">
                            <i class="fa-solid fa-map-location-dot"></i>
                            Headquarters:
                        </h6>
                        <p>

                            ABC-123 Sector-00 Noida <br>
                            Uttar Pradesh-201301
                        </p>

                    </div>

                </div>

            </div>

            <div class="text-center p-3" style="background-color: rgba(40, 38, 38, 0.05);">
                © 2024 Copyright:
                <a class="text-body" asp-action="Index" asp-controller="Home">RentNGo.com</a>
            </div>
     </footer>

    @RenderSection("scripts", required: false)
   

   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  
   <script src="https://cdn.jsdelivr.net/npm/waypoints@4.0.1/lib/jquery.waypoints.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js" integrity="sha512-GWzVrcGlo0TxTRvz9ttioyYJ+Wwk9Ck0G81D+eO63BaqHaJ3YZX9wuqjwgfcV/MrB2PhaVX9DkYVhbFpStnqpQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>